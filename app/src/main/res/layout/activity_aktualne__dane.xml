<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Aktualne_Dane"
    android:background="@drawable/tlo_powitania">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/tlo_powitania">
        <TextView
            android:id="@+id/tytul"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="30sp"
            android:layout_marginTop="10dp"
            android:layout_marginHorizontal="5dp"
            android:text="@string/aktualne_dane"
            android:textColor="@color/kolor_tytulu"
            android:fontFamily="@font/magnolia_script"
            />
        <Button
            android:id="@+id/odswiez"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="35sp"
            android:layout_below="@id/tytul"
            android:text="@string/odswiez"
            android:background="#FF9800"
          android:layout_marginHorizontal="20dp"
            android:layout_marginTop="30dp"
            android:onClick="odswiez"
            android:fontFamily="@font/times"/>
        <TextView
            android:id="@+id/aktualne_dane_temp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/odswiez"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:textSize="30sp"
            android:layout_marginTop="30dp"
            android:fontFamily="@font/times"/>
        <TextView
            android:id="@+id/aktualne_dane_wilg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/aktualne_dane_temp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:textSize="30sp"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/times"/>
        <TextView
            android:id="@+id/aktualne_dane_cisnienie"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/aktualne_dane_wilg"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:textSize="30sp"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/times"/>
        <TextView
            android:id="@+id/aktualne_dane_jakosc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/aktualne_dane_cisnienie"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:textSize="30sp"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/times"/>
        <TextView
            android:id="@+id/aktualne_dane_data"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/aktualne_dane_jakosc"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:textSize="30sp"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/times"/>
        <Button
            android:id="@+id/zapisz_aktualne"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="25sp"
            android:layout_below="@id/aktualne_dane_data"
            android:text="@string/zapisz_w_bazie"
            android:background="#FF9800"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="30dp"
            android:onClick="zapisz"
            android:fontFamily="@font/times"/>


    </RelativeLayout>


</ScrollView>
<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Edytuj_komentarz_arduino1"
    android:background="@drawable/tlo_powitania">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/tlo_powitania">
        <TextView
            android:id="@+id/tytul"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="30sp"
            android:layout_marginTop="10dp"
            android:layout_marginHorizontal="5dp"
            android:text="@string/edytuj_komentarz"
            android:textColor="@color/kolor_tytulu"
            android:fontFamily="@font/magnolia_script"
            />
        <TextView
            android:id="@+id/edytuj_komentarz_temp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tytul"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:textSize="20sp"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/times"/>
        <TextView
            android:id="@+id/edytuj_komentarz_wilg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/edytuj_komentarz_temp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:textSize="20sp"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/times"/>
        <TextView
            android:id="@+id/edytuj_komentarz_cisnienie"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/edytuj_komentarz_wilg"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:textSize="20sp"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/times"/>
        <TextView
            android:id="@+id/edytuj_komentarz_szk_gazy"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/edytuj_komentarz_cisnienie"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:textSize="20sp"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/times"/>
        <TextView
            android:id="@+id/edytuj_komentarz_data"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/edytuj_komentarz_szk_gazy"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:textSize="20sp"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/times"/>
        <EditText
            android:id="@+id/et_edytuj_komentarz"
            android:layout_below="@id/edytuj_komentarz_data"
            android:inputType="textMultiLine"
            android:gravity="top|left"
            android:lines="10"
            android:minLines="10"
            android:maxLength="499"
            android:layout_marginHorizontal="30dp"
            android:background="@color/tlo_et1"
            android:layout_marginTop="5dp"
            android:hint="Edytuj komentarz"
            android:maxLines="20"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:scrollbars="vertical"
            android:textSize="20sp"
            />
        <Button
            android:id="@+id/bt_edytuj_komentarz"
            android:layout_below="@id/et_edytuj_komentarz"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="30dp"
            android:layout_marginTop="-30dp"
            android:text="@string/edytuj_komentarz"
            android:background="#FF9800"
            android:textSize="25sp"
            android:fontFamily="@font/times"
            android:onClick="edytuj_komentarz"
            android:textStyle="bold"
            />
        <Button
            android:layout_below="@id/bt_edytuj_komentarz"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="-25dp"
            android:text="@string/usun_komentarz"
            android:background="@color/tlo_przyciski2"
            android:textSize="25sp"
            android:fontFamily="@font/times"
            android:onClick="usun_komentarz"
            android:textStyle="bold"
            />
    </RelativeLayout>

</ScrollView>